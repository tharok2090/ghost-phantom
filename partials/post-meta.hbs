{{#contentFor "meta"}}
    <meta name="author" content="{{author.name}}" />
    <meta name="description" content="{{excerpt characters='157'}}..." />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{url absolute='true'}}" />
    <meta property="twitter:url" content="{{url absolute='true'}}" />
    <meta property="og:description" content="{{excerpt characters='157'}}..." />
    <meta property="twitter:description" content="{{excerpt characters='157'}}..." />
    {{#if feature_image}}
        <meta property="og:image" content="{{img_url feature_image}}" />
        <meta property="twitter:image" content="{{img_url feature_image}}" />
    {{/if}}
{{/contentFor}}
